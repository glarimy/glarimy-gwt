<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <servlet>
    <servlet-name>library</servlet-name>
    <servlet-class>com.glarimy.gwt.server.LibraryServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>library</servlet-name>
    <url-pattern>/Library/books</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>library.html</welcome-file>
  </welcome-file-list>
</web-app>
